// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "maia2",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"features": {
		"ghcr.io/va-h/devcontainers-features/uv:1": {
			"shellautocompletion": true,
			"version": "latest"
		}
	},
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"settings": {
				"python.defaultInterpreterPath": "/workspaces/maia2-shogi/.venv/bin/python",
				"search.exclude": {
					"data": true
				},
				"python.analysis.exclude": [
					"data"
				],
				"[python]": {
					"editor.formatOnSave": true,                   // 保存時にフォーマッター実行
					"editor.defaultFormatter": "charliermarsh.ruff", // Ruff拡張をフォーマッターに指定
					"editor.codeActionsOnSave": {
					  "source.fixAll": "explicit",                 // 保存時に全ての自動修正を適用
					  "source.organizeImports": "explicit"         // 保存時にインポートを整理
					}
				}
			},
			"extensions": [
				"ms-python.python",
				"charliermarsh.ruff",
				"christian-kohler.path-intellisense",
				"mechatroner.rainbow-csv"
			]
		}
	},

	// ユーザー設定
	"remoteUser": "vscode",
	"containerUser": "vscode",
	
	// Windows ホストとの権限同期
	"updateRemoteUserUID": true,

	"postCreateCommand": "/bin/bash -lc \"${containerWorkspaceFolder}/.devcontainer/postCreate.sh\""
}
